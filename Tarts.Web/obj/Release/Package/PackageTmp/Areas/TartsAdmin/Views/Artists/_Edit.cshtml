@using Tarts.Events
@model Artist

@using (@Html.BeginForm("Update", "Artists", null, FormMethod.Post, new { @class = "standardform" }))
{
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="clearfix"><label>Name</label>
    <div class="input"><input type="text" name="Name" value="@Model.Name" /></div></div>
    <div class="clearfix"><label>Slug</label>
    <div class="input"><input type="text" name="Slug" value="@Model.Slug" /></div></div>
    <div class="clearfix"><label>Image</label>
    <div class="input media-item">
        @Assets.Thumbnail(Model.Image, "SelectedImageDisplay")
        @if (Model.ID != -1)
        {
            <br/>
            Html.RenderAction("ImageSelector", "Images");
        }
        <input type="hidden" id="SelectedImageID" name="ImageID"/>
    </div></div>
    <div class="clearfix"><label>Bio</label>
    <div class="input">
    <textarea name="Bio" class="editor" rows="20" style="width: 90%">@Model.Bio</textarea>
    </div></div>
    <div class="actions">
        <input class="btn primary" type="submit" value="Save changes">
        @Html.ActionLink("Back", "Index", "Artists", null, new { @class = "btn" })
          
    </div>
}

