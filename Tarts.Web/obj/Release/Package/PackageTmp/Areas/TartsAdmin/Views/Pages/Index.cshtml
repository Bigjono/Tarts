@{
    ViewBag.Title = "Index";
    Layout = "../Shared/_Layout.cshtml";
}
@model IList<Tarts.Content.Page>
<h2>Content Pages</h2>


<table class="bordered-table zebra-striped">
<thead>
<tr>
<th>#</th>
<th>Name</th>
<th>Actions</th>
</tr>
</thead>
<tbody>

@foreach (var itm in Model)
{
    <tr>
        <td>@itm.ID</td>
        <td>@itm.Name</td>
        <td>
            @Html.ActionLink("edit", "Edit", "Pages", new { itm.ID }, new { @class = "btn primary" })
            @Html.ActionLink("delete", "Destroy", "Pages", new { itm.ID }, new { @class = "btn " })
        </td>
    </tr>
}
</tbody>
</table>


<div class="well">
@Html.ActionLink("Add New Page", "New", "Pages", null, new { @class = "btn primary large" })
</div>