@using Tarts.Admin
@model User
@{ ViewBag.Title = "New User";
   Layout = "../Shared/_Layout.cshtml"; }


<h2>Create New User</h2>
@using (@Html.BeginForm("Create", "Users", null, FormMethod.Post, new { @class = "standardform" }))
{
    <div class="clearfix"><label>Email</label>
    <div class="input"><input type="text" name="Email" value="@Model.Email" /></div></div>
    <div class="clearfix"><label>Password</label>
    <div class="input"><input type="password" name="Password" value="" /></div></div>
    <div class="actions">
        <input class="btn primary" type="submit" value="Create New Admin">
        @Html.ActionLink("Cancel", "Index", "Pages", null, new { @class = "btn" })
          
    </div>
}
